CREATE TABLE DISHES(
    DISHID NUMEBR(10),
    DISHNAME VARCHAR(50),
    CATEGORY VARCHAR(20),
    PRICE NUMBER(8,2),
    CHEFID NUMBER(10)
);

CREATE TABLE CUSTOMERS(
    CUSTOMERID NUMBER(10),
    FIRSTNAME VARCHAR(20),
    LASTNAME VARCHAR(20),
    PHONENUMBER NUMBER(10),
    EMAIL VARCHAR(50),
    ADDRESS VARCHAR(50)
);

CREATE TABLE ORDERS(
    ORDERID NUMBER(10),
    CUSTOMERID NUMBER(10),
    ORDERDATE DATE,
    TABLEID NUMBER(10),
    TOTALAMOUNT NUMBER(6,2)
);

CREATE TABLE ORDERDETAILS(
    ORDERDETAILSID NUMBER(10),
    ORDERID NUMBER(10),
    DISHID NUMBER(10),
    QUANTITY NUMBER(10),
    SUBTOTAL NUMBER(10)
);

CREATE TABLE CHEF(
    CHEFID NUMBER(10),
    FIRSTNAME VARCHAR2(20),
    LASTNAME VARCHAR2(20),
    SPECIALTY VARCHAR2(20),
    EXPERIENCEYEARS DATE
);

CREATE TABLE TABLES(
    TABLEID NUMBER(10),
    TABLENUMBER NUMBER(10),
    CAPACITY NUMBER(2),
    LOCATION VARCHAR2(20)
);
